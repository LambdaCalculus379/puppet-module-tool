- form_for @user do |f|
  = f.error_messages
  - if admin?
    %p
      = f.label :admin
      = f.check_box :admin
  %p
    = f.label :username
    = f.text_field :username
  %p
    = f.label :display_name, "Display Name"
    = f.text_field :display_name
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password, @user.new_record? ? "Password" : "Password (set to change)"
    = f.password_field :password
  %p
    = f.label :password_confirmation, @user.new_record? ? "Password confirmation" : "Password confirmation (set to change)"
    = f.password_field :password_confirmation
  %p
    = f.submit(@user.new_record? ? 'Sign up' : 'Update profile')
