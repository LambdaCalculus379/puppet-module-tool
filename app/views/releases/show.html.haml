- if can_change?
  %ul.minimenubar
    %li= link_to "Delete release", [@user, @mod, @release], :method => :delete, :confirm => "Delete release '#{h @mod.name}'?"

%h2
  = succeed ':' do
    = link_to @mod.full_name, module_path(@mod.owner, @mod)
  = @release.version

- unless @release.notes.blank?
  %div.introduction= markdown(@release.notes)

%p= link_to "Download", @release.file.url, :class => 'download-link'

= render :partial => 'metadata'
